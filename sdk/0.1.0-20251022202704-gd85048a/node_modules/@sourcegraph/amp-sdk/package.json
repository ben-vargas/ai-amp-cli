{
  "author": {
    "name": "The Amp Team at Sourcegraph",
    "email": "amp-devs@sourcegraph.com"
  },
  "dependencies": {
    "@sourcegraph/amp": "latest",
    "zod": "^3.23.8"
  },
  "description": "TypeScript SDK for Amp CLI - Build custom AI agents with Amp's capabilities",
  "engines": {
    "node": ">=18"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "!dist/**/*.map",
    "README.md"
  ],
  "homepage": "https://ampcode.com/",
  "keywords": [
    "ai",
    "agent",
    "amp",
    "sourcegraph",
    "cli",
    "typescript",
    "sdk",
    "automation"
  ],
  "license": "SEE LICENSE IN LICENSE.md",
  "main": "dist/index.js",
  "name": "@sourcegraph/amp-sdk",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sourcegraph/amp.git",
    "directory": "sdk/typescript"
  },
  "type": "module",
  "types": "dist/index.d.ts",
  "version": "0.1.0-20251022202704-gd85048a",
  "scripts": {
    "build": "bun run scripts/build.ts",
    "dev": "pnpm exec tsc -b --watch",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "examples:basic": "pnpm run build && bun run examples/basic.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "pin-cli-version": "bun run scripts/pin-cli-version.ts"
  }
}